<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.gcode.starbarproj.MainActivity">

    <com.gcode.starbar.StarBar
        android:id="@+id/sbv_starbar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:star_interval_width="1dp"
        app:star_height="25dp"
        app:star_unselected="@mipmap/ic_star_yellow_unselected"
        app:star_select_method="star_sliding"
        app:star_max="5"
        app:star_orientation="star_horizontal"
        app:star_rating="2.5"
        app:star_selected="@mipmap/ic_star_yellow_selected"
        app:star_width="25dp"
        android:layout_marginTop="66dp" />

    <com.gcode.starbar.StarBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:star_interval_width="1dp"
        app:star_height="40dp"
        app:star_unselected="@mipmap/ic_star_yellow_unselected"
        app:star_select_method="star_click"
        app:star_max="5"
        app:star_orientation="star_horizontal"
        app:star_rating="2.5"
        app:star_selected="@mipmap/ic_star_yellow_selected"
        app:star_width="40dp"
        android:layout_marginTop="66dp" />

    <com.gcode.starbar.StarBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:star_interval_width="1dp"
        app:star_height="40dp"
        app:star_unselected="@mipmap/ic_star_yellow_unselected"
        app:star_select_method="star_sliding"
        app:star_max="5"
        app:star_orientation="star_vertical"
        app:star_rating="2"
        app:star_selected="@mipmap/ic_star_yellow_selected"
        app:star_width="40dp"
        android:layout_marginTop="61dp"
        android:id="@+id/starBarView" />
</LinearLayout>